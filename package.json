{
  "name": "login-demo-qtm",
  "version": "1.0.0",
  "description": "Login demo application with API-triggered tests",
  "main": "login/src/common/server.js",
  "scripts": {
    "start": "dotenv -e .env -- node login/src/common/server.js",
    "start:stable": "dotenv -e .env -- ENV_STATE=stable node login/src/common/server.js",
    "start:dev": "dotenv -e .env -- ENV_STATE=dev node login/src/common/server.js",
    "docker:build": "docker-compose --env-file .env up --build",
    "docker:down": "docker-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "api:test": "node login/src/api/tests/runTestsFromCLI.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "supertest": "^6.3.3",
    "pg": "^8.11.5",
    "dotenv-cli": "^7.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC"
}
